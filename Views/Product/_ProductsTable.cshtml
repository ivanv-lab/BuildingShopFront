@{
    string name="";
}

<table class="table table-hover" id="productsTable">
    <thead>
        <tr>
            <th scope="col">
                Номер
            </th>
            <th scope="col">
                Наименование
            </th>
            <th scope="col">
                Количество
            </th>
            <th scope="col">
                Категория
            </th>
            <th></th>
        </tr>
    </thead>
    @foreach(var item in Model)
    {
        <tr>
            <td scope="row">
                @item.Id
            </td>
            <td scope="row">
                @item.Name
            </td>
            <td scope="row">
                @item.Count
            </td>
            <td scope="row">
                @item.Category.Name
            </td>
            <td scope="row">
                <div class="dropdown">
                    <button type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false" data-bs-auto-close="outside">
                        Изменить
                    </button>
                    <form class="dropdown-menu p-4" asp-controller="Product">
                        <div class="mb-3">
                            <input type="text" class="form-control" asp-for="@name" placeholder="Наименование">
                        </div>
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary"
                                    asp-action="Update" asp-route-id="@item.Id">
                                Сохранить
                            </button>
                            <div class="dropdown-divider"></div>
                            <a class="btn btn-primary" asp-controller="Product"
                               asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
                        </div>
                    </form>
                </div>
            </td>
        </tr>
    }
</table>
